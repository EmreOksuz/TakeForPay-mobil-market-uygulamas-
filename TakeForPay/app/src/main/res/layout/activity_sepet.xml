<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/diamond_upholstery"
    tools:context=".SepetActivity">

    <Button
        android:id="@+id/ALBTN"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/button_radius"
        android:text="Kamerayı Aç"
        android:textColor="#DDFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ÖdeBTN" />

    <Button
        android:id="@+id/ÖdeBTN"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/button_radius"
        android:text="ÖDE"
        android:textColor="#DDFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/QRTXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewPara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/QRTXT"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="32dp"
        android:text="Toplam Tutar:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ALBTN"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ToplamTutarTXT"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:text="0"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ALBTN"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:text="TL"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ALBTN"
        app:layout_constraintStart_toEndOf="@+id/ToplamTutarTXT" />

    <TableLayout
        android:id="@+id/TableL"
        android:layout_width="1300px"
        android:layout_height="350dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/TableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ÜrünSeriKodu"
                android:layout_width="115dp"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text="Ürün Serikodu"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="550px"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text="Ürün Adı"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="200px"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text="Fiyat"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="200px"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text="Adet"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>