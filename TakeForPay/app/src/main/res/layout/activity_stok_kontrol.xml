<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/diamond_upholstery"

    tools:context=".StokKontrolActivity">


    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/TableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ÜrünSeriKodu"
                android:layout_width="127dp"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text="   Ürün Serikodu"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="562px"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text="   Ürün Adı"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="220px"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text=" Gramaj"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="213px"
                android:layout_height="28dp"
                android:background="#CCF44336"
                android:text="   Stok"
                android:textColor="#DDFFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>